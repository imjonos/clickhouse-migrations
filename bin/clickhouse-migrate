#!/usr/bin/env php
<?php

require_once __DIR__ . '/../../../autoload.php';
$configFiles = [
    __DIR__ . '/../../../../config/clickhouse-migrations.php',
    __DIR__ . '/../config/clickhouse-migrations.php',
];
$config = [];

foreach ($configFiles as $configFile) {
    if (file_exists($configFile)) {
        $config = require $configFile;
        break;
    }
}
$adapter = new $config['adapter'](
    $config['host'] ?? '',
    $config['username'] ?? '',
    $config['password'] ?? '',
    $config['database'] ?? '',
    $config['port'] ?? 0
);

$service = new \Nos\DbAdapters\Services\ClickHouseMigrationService(
    $adapter,
    $config['history_file'] ?? '',
    $config['dir'] ?? '',
    $config['bindings'] ?? []
);

$param = $argv[1] ?? '';

if ($param === 'force') {
    $service->resetDataBase();
}

$migrations = $service->getMigrationList();

if (count($migrations)) {
    foreach ($migrations as $migration) {
        echo $migration;
        $migrated = ' migrated!' . PHP_EOL;
        if (!$service->migrate($migration)) {
            $migrated = ' not' . $migrated;
        }
        echo $migrated;
    }
} else {
    echo 'Nothing to migrate!' . PHP_EOL;
}
